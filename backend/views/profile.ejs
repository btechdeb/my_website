<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <!-- Include Sidebar -->
  <%- include('partials/topnav') %>

  <div class="content">
    <h2>User Profile</h2>
    <div class="profile-container">
      <div class="profile-item">
        <h3>Name</h3>
        <p><%= user.name %></p>
      </div>
      <div class="profile-item">
        <h3>Email</h3>
        <p><%= user.email %></p>
      </div>
      <div class="profile-item">
        <h3>Role</h3>
        <p><%= user.role %></p>
      </div>
      <div class="profile-item">
        <h3>Phone Number</h3>
        <p><%= user.phone %></p>
      </div>
      <div class="profile-item">
        <h3>Address</h3>
        <p><%= user.address %></p>
      </div>
      <div class="profile-item">
        <h3>Date of Birth</h3>
        <p><%= user.dateOfBirth.toISOString().split('T')[0] %></p>
      </div>
    </div>
  </div>
</body>
</html>
